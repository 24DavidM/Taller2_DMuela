{
  "expo": {
    "name": "Creador de CV",
    "slug": "cv-creator-app",
    "scheme": "cv-creator-app",
    "version": "1.0.0",
    "orientation": "portrait",
    "userInterfaceStyle": "light",
    "icon": "./assets/images/icono.png",
    "splash": {
      "image": "./assets/images/icono.png",
      "resizeMode": "contain",
      "backgroundColor": "#007AFF"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.juankgonzalez.cvcreator",
      "infoPlist": {
        "NSCameraUsageDescription": "Esta app necesita acceso a la cámara para tomar tu foto de perfil.",
        "NSPhotoLibraryUsageDescription": "Esta app necesita acceso a tu galería para seleccionar tu foto de perfil."
      }
    },
    "android": {
      "package": "com.juankgonzalez.cvcreator",
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.WRITE_EXTERNAL_STORAGE",
        "android.permission.READ_MEDIA_IMAGES",
        "android.permission.RECORD_AUDIO"
      ],
      "adaptiveIcon": {
        "backgroundColor": "#3498db"
      }
    },
    "plugins": [
      [
        "expo-image-picker",
        {
          "photosPermission": "La app necesita acceso a tus fotos para seleccionar tu foto de perfil."
        }
      ]
    ],
    "extra": {
      "eas": {
        "projectId": "a20a8695-434a-4662-8289-9daa163811af"
      }
    }
  }
}
